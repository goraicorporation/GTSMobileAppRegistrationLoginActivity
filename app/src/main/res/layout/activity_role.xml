<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/wel_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Your Login ID is created successfully!!! "
        android:textColor="@color/success"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/roles"
        android:layout_width="193dp"
        android:layout_height="312dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/radioGroup"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2">


        <CheckBox
            android:id="@+id/role_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/green"
            android:text="Service Provider"
            android:textSize="25dp" />

        <CheckBox
            android:id="@+id/role_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:buttonTint="@color/green"
            android:text="Service Consumer"
            android:textSize="25dp" />

        <CheckBox
            android:id="@+id/role_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:buttonTint="@color/green"
            android:text="Recruiter"
            android:textSize="25dp" />

        <CheckBox
            android:id="@+id/role_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:buttonTint="@color/green"
            android:text="Trainer"
            android:textSize="25dp" />

        <CheckBox
            android:id="@+id/role_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:buttonTint="@color/green"
            android:text="Trainee"
            android:textSize="25dp" />

    </LinearLayout>


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="158dp"
        android:layout_height="317dp"
        android:layout_marginEnd="2dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Default"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/default_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:buttonTint="@color/green"
            android:checked="false" />

        <RadioButton
            android:id="@+id/default_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:buttonTint="@color/green" />

        <RadioButton
            android:id="@+id/default_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:buttonTint="@color/green" />

        <RadioButton
            android:id="@+id/default_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:buttonTint="@color/green" />

        <RadioButton
            android:id="@+id/default_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:buttonTint="@color/green" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="354dp"
        android:layout_height="100dp"
        android:text="Please select one or more roles to complete the registration."
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/wel_text"


        app:layout_constraintStart_toStartOf="@+id/wel_text"
        app:layout_constraintTop_toBottomOf="@+id/wel_text" />

    <Button
        android:id="@+id/role_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_corners"
        android:padding="15dp"
        android:text="Save and Continue"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roles" />


</androidx.constraintlayout.widget.ConstraintLayout>